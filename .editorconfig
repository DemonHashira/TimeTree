# Root EditorConfig (apply project-wide)
root = true

# === Default settings ===
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# === Kotlin sources ===
[*.{kt,kts}]
indent_size = 4
continuation_indent_size = 4
max_line_length = 120

# === Java sources (if any) ===
[*.java]
indent_size = 4
continuation_indent_size = 4
max_line_length = 120

# === Gradle build scripts ===
[*.{gradle,gradle.kts}]
indent_size = 4
continuation_indent_size = 4
max_line_length = 120

# === Markdown/Docs ===
[*.md]
trim_trailing_whitespace = false # allow intentional spaces
max_line_length = off
