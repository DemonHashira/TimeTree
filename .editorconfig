root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Kotlin
[*.{kt,kts}]
indent_size = 4
continuation_indent_size = 4
max_line_length = 120

# Java
[*.java]
indent_size = 4
continuation_indent_size = 4
max_line_length = 120

# Gradle
[*.{gradle,gradle.kts}]
indent_size = 4
continuation_indent_size = 4
max_line_length = 120

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off
